{{- $path := .Get "path" -}}
{{- $cover := .Get "cover" -}}
{{- $escape := .Get "escape" | default true -}}

{{- $page := .Site.GetPage $path -}}

{{- if not $page -}}
  {{- errorf "postLinkCard shortcode: page not found: %s" $path -}}
{{- end -}}

{{- $title := $page.Title -}}
{{- $displayTitle := $title -}}
{{- if not $escape -}}
	{{- $displayTitle = $title | safeHTML -}}
{{- end -}}

<a href="{{ $page.Permalink | absURL }}" title="{{ $title }}" target="_blank">{{ $displayTitle }}</a>